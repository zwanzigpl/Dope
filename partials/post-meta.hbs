{{^is "page"}}
    <div class="post-meta">
        <span class="post-meta-item post-meta-date">
            <time datetime="{{date format="YYYY-MM-DD"}}">
                {{#unless number_date}}
                    {{date published_at timeago="true"}}
                {{else}}
                    {{date published_at}}
                {{/unless}}
            </time>
        </span>
        <span class="post-meta-item post-meta-length">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
        {{#if featured}}
            <span class="post-meta-featured">
                <i class="icon icon-star"></i>
            </span>
        {{/if}}
    </div>
{{/is}}
